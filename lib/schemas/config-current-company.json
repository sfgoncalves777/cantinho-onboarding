{
  "$id": "config-current-company",
  "type": "object",
  "required": [
    "name",
    "tenant",
    "dns",
    "GTM",
    "address",
    "contact",
    "citiesAndDistricts"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "tenant": {
      "type": "string",
      "minLength": 1
    },
    "dns": {
      "type": "string",
      "minLength": 1,
      "pattern": "^www\\..+"
    },
    "GTM": {
      "type": "string",
      "minLength": 9,
      "maxLength": 20
    },
    "address": {
      "type": "object",
      "required": [
        "street",
        "number",
        "district",
        "city",
        "state"
      ],
      "properties": {
        "street": {
          "type": "string",
          "minLength": 1
        },
        "number": {
          "type": "string",
          "minLength": 1
        },
        "complement": {
          "type": "string",
          "minLength": 1
        },
        "district": {
          "type": "string",
          "minLength": 1
        },
        "city": {
          "type": "string",
          "minLength": 1
        },
        "state": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        }
      }
    },
    "contact": {
      "type": "object",
      "required": [
        "email",
        "phone",
        "whatsapp"
      ],
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "minLength": 1
        },
        "phone": {
          "type": "string",
          "minLength": 10
        },
        "whatsapp": {
          "type": "string",
          "minLength": 11
        }
      }
    },
    "citiesAndDistricts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "districts"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "districts": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}