{
  "$id": "config-current-user",
  "type": "object",
  "required": [
    "name",
    "email",
    "password",
    "type"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 1
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "type": {
      "type": "string",
      "enum": [
        "companyAdmin",
        "companyUser"
      ]
    }
  }
}